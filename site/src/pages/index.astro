---
import '../styles/global.css';
// Component Imports
import { HazCatApp } from '@/components/hazcat/HazCat';
import Background from '@/components/background.astro';
import { ModeToggle } from '@/components/ModeToggle';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches
      ? 'dark'
      : 'light';
  };
  const isDark = getThemePreference() === 'dark';
  document.documentElement.classList[isDark ? 'add' : 'remove']('dark');

  if (typeof localStorage !== 'undefined') {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ['class'],
    });
  }
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>HazCat</title>
  </head>

  <body class="h-screen overflow-hidden">
    <Background />
    <div class="absolute top-3 right-3 z-10">
      <ModeToggle client:load />
    </div>
    <div class="flex flex-col items-center justify-center h-full p-5 gap-4">
      <h1 class="text-9xl font-cat shrink-0">HazCat?</h1>
      <div class="min-h-0 w-full max-w-2xl overflow-hidden">
        <HazCatApp client:load />
      </div>
    </div>
  </body>
</html>
